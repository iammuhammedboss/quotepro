<script>
// 🔥 Enhanced Export Configuration JavaScript

// Initialize form state
let currentTemplate = 'professional';
let isExporting = false;

// Template configurations
const templateConfigs = {
  professional: {
    headerFontSize: '28px',
    bodyFontSize: '14px',
    tableFontSize: '12px',
    paperSize: 'A4',
    includeHeaderFooter: true,
    whatsappTemplate: 'professional',
    emailTemplate: 'professional'
  },
  modern: {
    headerFontSize: '32px',
    bodyFontSize: '16px',
    tableFontSize: '14px',
    paperSize: 'A4',
    letterhead: 'modern',
    whatsappTemplate: 'friendly',
    emailTemplate: 'friendly'
  },
  detailed: {
    headerFontSize: '24px',
    bodyFontSize: '12px',
    tableFontSize: '10px',
    paperSize: 'A4',
    includeSignature: true,
    includeHeaderFooter: true,
    whatsappTemplate: 'detailed',
    emailTemplate: 'formal'
  }
};

// Enhanced event listeners
document.addEventListener('DOMContentLoaded', function() {
  console.log('🚀 Enhanced export configuration initialized');
  
  // Initialize form
  initializeForm();
  
  // Template selection
  document.querySelectorAll('.template-card').forEach(card => {
    card.addEventListener('click', function() {
      selectTemplate(this.dataset.template);
    });
  });
  
  // Saved templates
  document.getElementById('savedTemplates').addEventListener('change', function() {
    if (this.value) {
      loadSavedTemplate(this.value);
    }
  });
  
  // Conditional visibility
  setupConditionalVisibility();
  
  // Update timestamp
  updateTimestamp();
  setInterval(updateTimestamp, 60000);
  
  // Auto-save settings
  document.getElementById('export-form').addEventListener('change', autoSaveSettings);
});

// Initialize form with default values
function initializeForm() {
  // Set default template
  selectTemplate('professional');
  
  // Auto-generate email if client has email
  const clientEmail = '<%= quotation.client_email || "" %>';
  if (clientEmail && !document.getElementById('emailTo').value) {
    document.getElementById('emailTo').value = clientEmail;
  }
  
  // Generate default email subject
  if (!document.getElementById('emailSubject').value) {
    document.getElementById('emailSubject').value = `Quotation <%= quotation.quotation_no %> - <%= quotation.client_name %>`;
  }
}

// Setup conditional visibility for form elements
function setupConditionalVisibility() {
  // Signature options
  document.getElementById('includeSignature').addEventListener('change', function() {
    document.getElementById('signatureOptions').style.display = this.checked ? 'block' : 'none';
  });

  // Stamp options
  document.getElementById('includeStamp').addEventListener('change', function() {
    document.getElementById('stampOptions').style.display = this.checked ? 'block' : 'none';
  });

  // Stamp position controls
  document.getElementById('manualStampPosition').addEventListener('change', function() {
    document.getElementById('stampPositionControls').style.display = this.checked ? 'block' : 'none';
  });
  
  // WhatsApp template preview
  document.getElementById('whatsappTemplate').addEventListener('change', updateWhatsAppPreview);
  updateWhatsAppPreview();
}

// Select template and apply settings
function selectTemplate(templateName) {
  currentTemplate = templateName;
  
  // Update UI
  document.querySelectorAll('.template-card').forEach(card => {
    card.classList.remove('selected');
  });
  document.querySelector(`[data-template="${templateName}"]`).classList.add('selected');
  
  // Apply template settings
  const config = templateConfigs[templateName];
  Object.entries(config).forEach(([key, value]) => {
    const element = document.getElementById(key);
    if (element) {
      if (element.type === 'checkbox') {
        element.checked = value;
      } else {
        element.value = value;
      }
      element.dispatchEvent(new Event('change'));
    }
  });
  
  showMessage(`Template "${templateName}" applied successfully!`, 'success');
}

// Load saved template
function loadSavedTemplate(templateId) {
  const option = document.querySelector(`option[value="${templateId}"]`);
  if (option) {
    try {
      const settings = JSON.parse(option.dataset.settings);
      applySettings(settings);
      showMessage(`Template loaded successfully!`, 'success');
    } catch (error) {
      showMessage('Failed to load template settings', 'error');
    }
  }
}

// Apply settings to form
function applySettings(settings) {
  Object.entries(settings).forEach(([key, value]) => {
    const element = document.getElementById(key);
    if (element) {
      if (element.type === 'checkbox') {
        element.checked = value;
      } else {
        element.value = value;
      }
      element.dispatchEvent(new Event('change'));
    }
  });
}

// Get current form settings
function getExportSettings() {
  const formData = new FormData(document.getElementById('export-form'));
  const settings = {};
  
  for (let [key, value] of formData.entries()) {
    settings[key] = value;
  }
  
  // Add checkboxes
  const checkboxes = ['includeSignature', 'includeStamp', 'manualStampPosition', 'optimizeImage', 
                     'highDPI', 'transparentBackground', 'includeHeaderFooter', 'multiPage', 
                     'pageBreaks', 'includeLogo'];
  
  checkboxes.forEach(id => {
    const element = document.getElementById(id);
    if (element) {
      settings[id] = element.checked;
    }
  });
  
  return settings;
}

// Update WhatsApp preview
function updateWhatsAppPreview() {
  const template = document.getElementById('whatsappTemplate').value;
  const preview = document.getElementById('whatsappPreview');
  
  const templates = {
    professional: `📋 *QUOTATION DETAILS*\n\n🏢 *Client:* <%= quotation.client_name %>\n💰 *Total:* OMR <%= parseFloat(quotation.grand_total).toFixed(3) %>\n📅 *Date:* <%= new Date(quotation.tdate).toLocaleDateString('en-GB') %>\n\n💧 *International Pipes Technology Co LLC*`,
    friendly: `Hello <%= quotation.client_name %>! 👋\n\nYour quotation is ready! 📋✨\n💰 Total: OMR <%= parseFloat(quotation.grand_total).toFixed(3) %>\n\nQuestions? Just reply! 😊`,
    brief: `📄 Quotation <%= quotation.quotation_no %>\n💰 OMR <%= parseFloat(quotation.grand_total).toFixed(3) %>\n📞 Contact us`,
    detailed: `🏗️ *WATERPROOFING QUOTATION*\n\n*CLIENT:* <%= quotation.client_name %>\n*AMOUNT:* OMR <%= parseFloat(quotation.grand_total).toFixed(3) %>\n*WARRANTY:* <%= quotation.warranty || 17 %> Years\n\n*International Pipes Technology Co LLC*`
  };
  
  preview.textContent = templates[template] || templates.professional;
}

// Show progress
function showProgress(stage, percentage) {
  const progressSection = document.getElementById('progressSection');
  const progressFill = document.getElementById('progressFill');
  const progressPercent = document.getElementById('progressPercent');
  const progressStatus = document.getElementById('progressStatus');
  
  progressSection.classList.remove('hidden');
  progressFill.style.width = percentage + '%';
  progressPercent.textContent = percentage + '%';
  progressStatus.textContent = stage;
}

// Hide progress
function hideProgress() {
  document.getElementById('progressSection').classList.add('hidden');
}

// Show message
function showMessage(message, type = 'success') {
  const container = document.getElementById('messagesContainer');
  const messageDiv = document.createElement('div');
  messageDiv.className = `message ${type} flex items-center gap-3`;
  messageDiv.style.display = 'flex';
  
  const icon = type === 'success' ? 'fas fa-check-circle' : 
               type === 'error' ? 'fas fa-exclamation-circle' : 'fas fa-info-circle';
  
  messageDiv.innerHTML = `
    <i class="${icon}"></i>
    <span>${message}</span>
    <button onclick="this.parentElement.remove()" class="ml-auto text-current opacity-70 hover:opacity-100">
      <i class="fas fa-times"></i>
    </button>
  `;
  
  container.appendChild(messageDiv);
  
  setTimeout(() => {
    if (messageDiv.parentElement) {
      messageDiv.remove();
    }
  }, 5000);
}

// Update timestamp
function updateTimestamp() {
  document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
}

// Auto-save settings to localStorage
function autoSaveSettings() {
  try {
    const settings = getExportSettings();
    localStorage.setItem('quotepro_export_settings', JSON.stringify(settings));
  } catch (error) {
    console.error('Failed to auto-save settings:', error);
  }
}

// Generate Preview
async function generatePreview() {
  if (isExporting) return;
  
  const previewBtn = document.querySelector('.export-btn.preview');
  const originalText = previewBtn.innerHTML;
  
  try {
    isExporting = true;
    previewBtn.classList.add('loading');
    previewBtn.innerHTML = '<i class="fas fa-spinner"></i> Generating...